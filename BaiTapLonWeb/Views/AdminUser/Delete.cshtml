@model BaiTapLonWeb.Models.User

@{
    Layout = null;
}

<
<body>

    <div>
        @Html.Partial("_HeaderAdmin")
        <div id="wp-content">
            <div id="content" class="container-fluid">
                <div class="card">
                    <div class="card-header font-weight-bold">
                        Bạn Có Muốn Xóa Người Dùng Nay Không
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.UserID)
                        <div class="form-group">
                            <label for="name">Họ và tên : </label>
                            @Html.DisplayFor(model => model.UserName)


                        </div>


                        <div class="form-group">
                            <label for="email">Email : </label>
                            @Html.DisplayFor(model => model.Email)


                        </div>


                        <div class="form-group">
                            <label for="confirm-password">Địa Chỉ : </label>
                            @Html.DisplayFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })


                        </div>
                        <div class="form-group">
                            <label for="permission">SDT : </label>
                            @Html.DisplayFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <div class="form-group">
                            <label for="permission">Ảnh : </label>
                            <img src="~/public/images/@Model.ImageUser" style="width:200px; height:200px" />

                        </div>
                        <div class="form-group">
                            <label for="permission">Quyền: </label>
                            @Html.DisplayFor(model => model.Role)

                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" style="color:snow;background-color:red"/> |
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        }
                    </div>
                </div>
               
            </div>
            
        </div>

        
    </div>
</body>


@model BaiTapLonWeb.Models.Product
<body>
    @Html.Partial("_HeaderAdmin")
    <div id="wp-content">
       
        <div id="content" class="container-fluid">
            <div class="card">
                <div class="card-header font-weight-bold">
                    Bạn Có Muốn Xóa Sản Phẩm Này Không
                </div>
                <div class="card-body">
                    <form action="">

                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="product_name">
                                        @Html.LabelFor(model => model.ProductName, "Tên Sản Phẩm : ")
                                    </label>

                                    @Html.DisplayFor(model => model.ProductName)
                                </div>
                                <div class="form-group">
                                    <label for="price">@Html.LabelFor(model => model.ProductPrice, "Giá : ")</label>
                                    @Model.ProductPrice
                                </div>
                                <div class="form-group">
                                    <label for="product_thumb">
                                        @Html.LabelFor(model => model.ProductImage, "Ảnh Sản Phẩm : ")
                                    </label>
                                    <img src="~/public/images/@Model.ProductImage" style="width:80px; height:80px" />

                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="intro">
                                        @Html.LabelFor(model => model.ProductDescription, "Mô Tả Sản Phẩm : ")
                                    </label>
                                    @Html.DisplayFor(model => model.ProductDescription, new { @class = "form-control", id = "product_desc", cols = "30", rows = "8" })

                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="intro">Chi tiết sản phẩm</label>
                            <textarea name="product_content"
                                      id="product_content"
                                      class="form-control" id="intro"
                                      cols="30"
                                      rows="5"></textarea>
                        </div>


                        <div class="form-group">
                            <label for="cat_title">@Html.LabelFor(model => model.CategoryID, "Danh Mục : ")</label>
                            @Html.DisplayFor(model => model.Category.CategoryName)
                        </div>


                    </form>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</body>


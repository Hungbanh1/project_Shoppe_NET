@model BaiTapLonWeb.Models.Category

<body>
    @using (Html.BeginForm(Html.BeginForm("Edit", "AdminCategory", FormMethod.Post, new { enctype = "multipart/form-data" })))
    {
        @Html.Partial("_HeaderAdmin")
        @Html.AntiForgeryToken()
        <div id="wp-content">

            <div id="content" class="container-fluid">
                <div class="card">
                    <div class="card-header font-weight-bold">
                        CHỈNH SỬA THÔNG TIN DANH MỤC
                    </div>
                    <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                                    @Html.HiddenFor(model => model.CategoryID)
                                    <div class="form-group">
                                        <label for="product_name">
                                            @Html.LabelFor(model => model.CategoryName, "Tên Danh Mục")
                                        </label>
                                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                             
                                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                                    </div>
                                   
                                    <div class="form-group">
                                        <label for="product_thumb">
                                            @Html.LabelFor(model => model.CategoryImage, "Ảnh Sản Phẩm")
                                        </label>


                                        @Html.TextBoxFor(model => model.CategoryImage, null, new { type = "file", @class = "product_thumb form-control-file", onchange = "previewFile()" })
                                        <img id="previewImage" src="~/public/images/@Model.CategoryImage" height="300px" width="300px" @if (string.IsNullOrEmpty(Model.CategoryImage)) { <text> style="display: none" </text> } />
                                        @Html.Hidden("oldimage", @Model.CategoryImage)
                                        @Html.ValidationMessageFor(model => model.CategoryImage, "", new { @class = "text-danger" })
                                        @*<script>
                                            function previewFile() {
                                                var preview = document.getElementById('previewImage');
                                                var file = document.querySelector('input[type=file]').files[0];
                                                var reader = new FileReader();

                                                reader.onloadend = function () {
                                                    preview.src = reader.result;
                                                    preview.style.display = 'block'; // Hiển thị ảnh
                                                }

                                                if (file) {
                                                    reader.readAsDataURL(file);
                                                } else {
                                                    preview.src = '';
                                                    preview.style.display = 'none'; // Ẩn ảnh nếu không có file được chọn
                                                }
                                            }
                                        </script>*@
                                    </div>
                                </div>
                           
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                       
                    </div>
                </div>
            </div>
        </div>
    }
</body>



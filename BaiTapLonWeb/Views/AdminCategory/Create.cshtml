@model BaiTapLonWeb.Models.Category


<body>

    
        @Html.Partial("_HeaderAdmin")
     

        <div id="wp-content">


            <div id="content" class="container-fluid">
                <div class="card">
                    <div class="card-header font-weight-bold">
                        THÊM SẢN PHẨM dsadsa
                    </div>
                    @using (Html.BeginForm("Create", "AdminCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="card-body">


                            <div class="row">
                                <div class="col-6">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <label for="product_name">
                                            @Html.LabelFor(model => model.CategoryName, "Tên Danh Mục")
                                        </label>

                                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                                    </div>
                                  
                                    <div class="form-group">
                                        <label for="product_thumb">
                                            @Html.LabelFor(model => model.CategoryImage, "Ảnh Danh Mục")
                                        </label>

                                        @Html.TextBoxFor(model => model.CategoryImage, null, new { type = "file", @class = "product_thumb form-control-file" })
                                        @Html.ValidationMessageFor(model => model.CategoryImage, "", new { @class = "text-danger" })




                                    </div>
                                </div>
                      
                            </div>


   

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>

                        </div>
                    }
                    </div>
            </div>
        </div>
    
</body>


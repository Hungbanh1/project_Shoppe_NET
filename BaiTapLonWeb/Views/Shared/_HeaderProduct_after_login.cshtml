<style>
    #accountContainer {
        position: relative;
    }

    #accountInfo {
        display: none;
        position: absolute;
        top: 100%; /* Hiển thị ngay dưới chữ "Tài khoản" */
        left: 0;
        z-index: 999;
        opacity: 0;
        transition: opacity 0.5s ease-out;
        background-color: white;
    }

    .accountContent {
        padding: 10px;
        text-align: left;
        white-space: nowrap; /* Ngăn chặn ngắt dòng */
    }

    #accountContainer:hover #accountInfo {
        display: block;
        opacity: 1;
    }
</style>